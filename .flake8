# .flake8
[flake8]
max-line-length = 88  # Increase from 79 to 88 (standard for Django/Black)
ignore = 
    E203,  # Whitespace before ':'
    W503,  # Line break before binary operator
    E501,  # Line too long - we'll increase limit instead
    E302,  # Expected 2 blank lines (too strict for Django)
    E305,  # Expected 2 blank lines after
    E231,  # Missing whitespace after ':'
    W292,  # No newline at end of file
    F401,  # Imported but unused (we'll fix these)
    E722,  # Do not use bare 'except'
    E275,  # Missing whitespace after keyword
    E225,  # Missing whitespace around operator
    E261,  # At least two spaces before inline comment
    E265,  # Block comment should start with '# '
    E131,  # Continuation line unaligned
    E128,  # Continuation line under-indented
    E303,  # Too many blank lines
    E251,  # Unexpected spaces around keyword/parameter equals
    E712,  # Comparison to False
    F841,  # Local variable assigned but never used
    F811,  # Redefinition of unused
    E117,  # Over-indented
exclude = 
    migrations,
    __pycache__,
    .git,
    .venv,
    venv,
    env,
    .env,
    node_modules,
    *.pyc,
    .github
per-file-ignores = 
    # Settings files often have long lines
    server/djangoproj/settings.py: E501
    # Admin files follow Django patterns
    server/djangoapp/admin.py: E302,E305
